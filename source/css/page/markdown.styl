  ul 
    li 
      list-style: disc
  ol 
    li
      list-style: decimal

  img
    max-width: 100%
    max-height: 100%
    margin: 10px 0
    // margin-left: 50%
    // transform: translateX(-50%)
    object-fit: contain
    cursor: pointer

  blockquote
    margin: 10px 0
    padding: 10px
    border-left: 6px solid #6482f8

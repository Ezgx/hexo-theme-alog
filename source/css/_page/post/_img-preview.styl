.preview-overlay
  position: fixed
  top: 0
  left: 0
  z-index: 10
  display: none
  size: 100%
  background-color: rgba(0, 0, 0, 0.85)
  .preview-wrapper
    flex-box(column, center, center)
    position: relative
    size: 100%
    .preview-img 
      max-width: 80%
      max-height: 60%
      object-fit: contain
    .slot
      size: 100% 14%
      margin-top: 20px
    .img-list
      flex-box(row, space-between)
      overflow-x: auto
      overflow-y: hidden
      position: absolute
      bottom: 10%
      max-width: 80%
      size: auto 14%
      min-height: 100px
      padding: 10px
      border-radius: $border-radius-base
      background-color: $black-dim
      li
        overflow: hidden
        position: relative
        min-width: 80px
        max-width: 80px
        size: auto 80px
        margin-right: 10px
        border-radius: $border-radius-base
        background-color: $black-light
        cursor: pointer
        &:last-child
          margin-right: 0
        img 
          max-width: 100%
          max-height: 100%
          object-fit: contain
      .selected
        &::before
          content: ''
          position: absolute
          top: 0
          left: 0
          z-index: 11
          size: 100%
          border-radius: $border-radius-base
          box-shadow: 0 0 0 2px $grey-dark inset

